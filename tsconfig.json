{
    "compilerOptions": {
        "target": "ES6",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": false,
        "alwaysStrict": true,
        "rootDir": "src",
        "removeComments": true,
        "declaration": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": ["src/*"],
    "exclude": ["node_modules"]
}
